# === Required: Salesforce / Agentforce ===
SALESFORCE_SERVER_URL=myorg.my.salesforce.com
SALESFORCE_CLIENT_ID=your_connected_app_consumer_key
SALESFORCE_CLIENT_SECRET=your_connected_app_consumer_secret
SALESFORCE_AGENT_ID=your_agentforce_agent_id
SALESFORCE_CLIENT_EMAIL=agent-user@myorg.com

# === Required: Proxy ===
BASE_URL=https://your-app.herokuapp.com
API_KEY=your_inbound_api_key
DELEGATE_API_KEY=your_outbound_api_key

# === Optional: Redis (auto-set by Heroku Redis add-on) ===
# REDIS_URL=redis://localhost:6379
# REDIS_TLS_URL=rediss://...

# === Optional: Behavior ===
SESSION_TTL_SECONDS=1800
LOG_LEVEL=info
NODE_ENV=development
PORT=3000

# === Optional: Security ===
# CORS_ORIGINS=https://your-app.com,https://admin.your-app.com
# RATE_LIMIT_A2A=100
# RATE_LIMIT_DELEGATE=60

# === Optional: External Agent Tokens ===
# Referenced via ENV: prefix in config/external-agents.json
# WEATHER_AGENT_TOKEN=token-for-weather-agent
# SEARCH_AGENT_TOKEN=token-for-search-agent
